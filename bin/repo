#!/usr/bin/env python

import configparser
import re


try:
    config = configparser.ConfigParser()
    config.read(".git/config")

    for key in config.keys():
        try:
            url = config.get(key, "url")

            url = re.sub(":", '/', url)
            url = re.sub("^.*@", 'https://', url)

            print(f"{key}: {url}")
        except:
            pass
except:
    print('You are not in the root of a git project')
